<Window x:Class="SmiteBasicAttackDamage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmiteBasicAttackDamage"
        mc:Ignorable="d"
        PreviewMouseUp="Window_PreviewMouseUp"
        Title="Smite: Basic attack damage" Height="670" Width="1000" Background="#071425" ResizeMode="NoResize">
    <Window.Resources>
        <local:FractionalValueToIntegerConverter x:Key="toIntegerConverter"/>
        <local:StringToSeparatedStringConverter x:Key="toSeparatedStringConverter"/>
        <Style x:Key="font_Style" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="/Fonts/Penumbra.ttf #Penumbra HalfSerif Std"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="itemFont_style" BasedOn="{StaticResource font_Style}">
            <Setter Property="TextAlignment" Value="left"/>
            <Setter Property="FontFamily" Value="Arctic"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#eeeeee"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style x:Key="border_Style" TargetType="Border">
            <Setter Property="BorderBrush" Value="#837A5B"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="itemToolTip_style" TargetType="ToolTip">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border Style="{StaticResource border_Style}" Background="#071425" Padding="10" BorderThickness="1" Width="270">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="53"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition>
                                        <RowDefinition.Style>
                                            <Style TargetType="RowDefinition">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Description}" Value="{x:Null}">
                                                        <Setter Property="Height" Value="0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </RowDefinition.Style>
                                    </RowDefinition>
                                </Grid.RowDefinitions>
                                <Border Style="{StaticResource border_Style}" Width="48" Height="48" VerticalAlignment="top" Margin="5,5,0,0">
                                    <Image  Source="{Binding ImagePath}"/>
                                </Border>
                                <Grid Grid.Column="2">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="{Binding Name}" Foreground="#C7C2AF" Style="{StaticResource font_Style}" FontSize="14" HorizontalAlignment="Left"/>
                                        <TextBlock Text="{Binding StringFormat= + {0}  POWER, Path=Power}">
                                            <TextBlock.Style>
                                                <Style BasedOn="{StaticResource itemFont_style}" TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Power}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding StringFormat= + {0}%  ATTACK SPEED, Path=AttackSpeed, Converter={StaticResource toIntegerConverter}}">
                                            <TextBlock.Style>
                                                <Style BasedOn="{StaticResource itemFont_style}" TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding AttackSpeed}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding StringFormat= + {0}%  CRITICAL STRIKE CHANCE, Path=CritChance, Converter={StaticResource toIntegerConverter}}">
                                            <TextBlock.Style>
                                                <Style BasedOn="{StaticResource itemFont_style}" TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CritChance}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding StringFormat= + {0}%  LIFESTEAL, Path=LifeSteal}">
                                            <TextBlock.Style>
                                                <Style BasedOn="{StaticResource itemFont_style}" TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding LifeSteal}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding StringFormat= + {0}  PENETRATION, Path=FlatPenetration}">
                                            <TextBlock.Style>
                                                <Style BasedOn="{StaticResource itemFont_style}" TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding FlatPenetration}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding StringFormat= + {0}%  PENETRATION, Path=PercentagePenetration, Converter={StaticResource toIntegerConverter}}">
                                            <TextBlock.Style>
                                                <Style BasedOn="{StaticResource itemFont_style}" TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding PercentagePenetration}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding StringFormat= + {0}  MAGICAL PROTECTIONS, Path=MagicalProtections}">
                                            <TextBlock.Style>
                                                <Style BasedOn="{StaticResource itemFont_style}" TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding MagicalProtections}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding StringFormat= + {0}  PHYSICAL PROTECTIONS, Path=PhysicalProtections}">
                                            <TextBlock.Style>
                                                <Style BasedOn="{StaticResource itemFont_style}" TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding PhysicalProtections}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding StringFormat= + {0}  HEALTH, Path=Health}">
                                            <TextBlock.Style>
                                                <Style BasedOn="{StaticResource itemFont_style}" TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Health}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding StringFormat= + {0}  MANA, Path=Mana}">
                                            <TextBlock.Style>
                                                <Style BasedOn="{StaticResource itemFont_style}" TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Mana}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding StringFormat= + {0}%  CROWD CONTROL REDUCTION, Path=CrowdControlReduction}">
                                            <TextBlock.Style>
                                                <Style BasedOn="{StaticResource itemFont_style}" TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CrowdControlReduction}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding StringFormat= + {0}  HP5, Path=Hp5}">
                                            <TextBlock.Style>
                                                <Style BasedOn="{StaticResource itemFont_style}" TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Hp5}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding StringFormat= + {0}  MP5, Path=Mp5}">
                                            <TextBlock.Style>
                                                <Style BasedOn="{StaticResource itemFont_style}" TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Mp5}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding StringFormat= + {0}%  MOVEMENT SPEED, Path=MovementSpeed}">
                                            <TextBlock.Style>
                                                <Style BasedOn="{StaticResource itemFont_style}" TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding MovementSpeed}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.ColumnSpan="3" Grid.Row="1">
                                    <TextBlock Margin="0,10,0,0" TextWrapping="Wrap" Text="{Binding Description}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource itemFont_style}">
                                                <Setter Property="Foreground" Value="#dddddd"/>
                                                <Setter Property="TextAlignment" Value="Justify"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Description}" Value="null">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="slider_Style" TargetType="{x:Type Slider}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Slider}">
                        <Grid VerticalAlignment="Center">
                            <Border x:Name="borderBackground" Margin="6,0" Height="4" Background="Gray" />
                            <Canvas Margin="0,-4,0,0" VerticalAlignment="Center">
                                <Border x:Name="PART_SelectionRange" HorizontalAlignment="Left" Height="4" Background="{TemplateBinding Foreground}" />
                            </Canvas>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Width="10" Height="20" />
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="IsSelectionRangeEnabled" Value="True" />
            <Setter Property="SelectionStart" Value="{Binding Minimum, RelativeSource={RelativeSource Self}}" />
            <Setter Property="SelectionEnd" Value="{Binding Value, RelativeSource={RelativeSource Self}}" />
            <Setter Property="Foreground" Value="#837A5B" />
            <Setter Property="IsSnapToTickEnabled" Value="True"/>
            <Setter Property="TickFrequency" Value="1"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Width" Value="230"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="20"/>
            <Setter Property="Value" Value="10"/>
            <Setter Property="Orientation" Value="Horizontal"/>
        </Style>
        <Style x:Key="targetSlider_Style" TargetType="{x:Type Slider}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Slider}">
                        <Grid VerticalAlignment="Center">
                            <Border x:Name="borderBackground" Margin="6,0" Height="4" Background="Gray" />
                            <Canvas Margin="0,-4,0,0" VerticalAlignment="Center">
                                <Border x:Name="PART_SelectionRange" HorizontalAlignment="Left" Height="4" Background="{TemplateBinding Foreground}" />
                            </Canvas>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Width="10" Height="20" />
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="IsSelectionRangeEnabled" Value="True" />
            <Setter Property="SelectionStart" Value="{Binding Minimum, RelativeSource={RelativeSource Self}}" />
            <Setter Property="SelectionEnd" Value="{Binding Value, RelativeSource={RelativeSource Self}}" />
            <Setter Property="Foreground" Value="#837A5B" />
            <Setter Property="IsSnapToTickEnabled" Value="True"/>
            <Setter Property="TickFrequency" Value="1"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Width" Value="230"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="20"/>
            <Setter Property="Value" Value="10"/>
            <Setter Property="Orientation" Value="Horizontal"/>
        </Style>
        <Style TargetType="ScrollViewer">
            <Style.Resources>
                <Style x:Key="ScrollBarThumbStyle" TargetType="Thumb">
                    <Setter Property="IsTabStop" Value="False" />
                    <Setter Property="Focusable" Value="False" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Thumb">
                                <Image Source="/Images/ScrollBar/Thumb.png"/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style x:Key="ScrollBarPageButtonStyle" TargetType="RepeatButton">
                    <Setter Property="IsTabStop" Value="False" />
                    <Setter Property="Focusable" Value="False" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="RepeatButton">
                                <Border Background="#273445" />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style x:Key="ScrollBarLineButtonStyle" TargetType="RepeatButton">
                    <Setter Property="Focusable" Value="False" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="RepeatButton"/>
                        </Setter.Value>
                    </Setter>
                </Style>
                <ControlTemplate x:Key="scroll" TargetType="ScrollBar">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="2" />
                        </Grid.RowDefinitions>
                        <RepeatButton Grid.Row="0" Style="{StaticResource ScrollBarLineButtonStyle}" 
                              Command="ScrollBar.LineUpCommand">
                        </RepeatButton>
                        <Track Grid.Row="1" ViewportSize="NaN" IsDirectionReversed="True" x:Name="PART_Track">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="ScrollBar.PageUpCommand" Style="{StaticResource ScrollBarPageButtonStyle}">

                                </RepeatButton>
                            </Track.DecreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb Height="80" Style="{StaticResource ScrollBarThumbStyle}" />
                            </Track.Thumb>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Command="ScrollBar.PageDownCommand"  Style="{StaticResource ScrollBarPageButtonStyle}">

                                </RepeatButton>
                            </Track.IncreaseRepeatButton>
                        </Track>
                        <RepeatButton Grid.Row="3" Style="{StaticResource ScrollBarLineButtonStyle}" 
                              Command="{x:Static ScrollBar.LineDownCommand}">
                        </RepeatButton>
                    </Grid>
                </ControlTemplate>
            </Style.Resources>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid Background="{TemplateBinding Background}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ScrollContentPresenter x:Name="ScrollContentPresenter"
                                                  Cursor="{TemplateBinding Cursor}"
                                                  Margin="{TemplateBinding Padding}"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}"/>

                            <Rectangle Grid.Column="1" Grid.Row="1" Fill="Transparent"/>

                            <ScrollBar Name="PART_VerticalScrollBar" 
                                           Width="10"
                                           IsTabStop="False"
                                           Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                           Grid.Column="1" Grid.Row="0" Orientation="Vertical"
                                           ViewportSize="{TemplateBinding ViewportHeight}"
                                           Maximum="{TemplateBinding ScrollableHeight}"
                                           Minimum="0"
                                           Value="{TemplateBinding VerticalOffset}"
                                           Margin="0,0,1,0" 
                                           Template="{StaticResource scroll}"
                                           SnapsToDevicePixels="True" 
                                           OverridesDefaultStyle="True"/>

                            <ScrollBar Name="PART_HorizontalScrollBar" Height="15"
                                     IsTabStop="False"
                                     Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                     Grid.Column="0" Grid.Row="1" Orientation="Horizontal"
                                     ViewportSize="{TemplateBinding ViewportWidth}"
                                     Maximum="{TemplateBinding ScrollableWidth}"
                                     Minimum="0"
                                     Value="{TemplateBinding HorizontalOffset}"
                                     Margin="-1,0,-1,-1"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="selectedGod" TargetType="ListBoxItem">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Height" Value="355"/>
            <Setter Property="Width" Value="246"/>
            <Setter Property="BorderBrush" Value="#837A5B"/>
            <Setter Property="Foreground" Value="Transparent"/>
            <Setter Property="Image.Source" Value="{Binding PreviewPath}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border BorderThickness="1" BorderBrush="{TemplateBinding BorderBrush}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="325"/>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>
                                <Image Grid.Row="0" Grid.RowSpan="1" 
                                       Source="{TemplateBinding Property=Image.Source}"/>
                                <Border Grid.Row="1" BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="0,1,0,0">
                                    <TextBlock Text="{Binding Path=Name}" 
                                               Style="{StaticResource font_Style}"/>
                                </Border>
                                <ContentPresenter/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>

                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#C7C2AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="leftListOfGodsItem_style" TargetType="ListBoxItem">
            <Setter Property="ToolTip">
                <Setter.Value>
                    <ToolTip>
                        <ToolTip.Template>
                            <ControlTemplate TargetType="ToolTip">
                                <Border Style="{StaticResource border_Style}" Background="#071425" Padding="5,2,5,2" BorderThickness="1">
                                    <TextBlock Text="{Binding Name}"  Foreground="White"/>
                                </Border>
                            </ControlTemplate>
                        </ToolTip.Template>
                    </ToolTip>
                </Setter.Value>
            </Setter>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Image.Source" Value="{Binding IconPath}"/>
            <Setter Property="BorderBrush" Value="#837A5B"/>
            <EventSetter Event="PreviewMouseUp" Handler="leftListOfGods_PreviewMouseUp"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                            <Grid>
                                <Image Source="{TemplateBinding Property=Image.Source}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>


            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#C7C2AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="rightListOfGodsItem_style" TargetType="ListBoxItem">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="ToolTip">
                <Setter.Value>
                    <ToolTip>
                        <ToolTip.Template>
                            <ControlTemplate TargetType="ToolTip">
                                <Border Style="{StaticResource border_Style}" Background="#071425" Padding="5,2,5,2" BorderThickness="1">
                                    <TextBlock Text="{Binding Name}"  Foreground="White"/>
                                </Border>
                            </ControlTemplate>
                        </ToolTip.Template>
                    </ToolTip>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Image.Source" Value="{Binding IconPath}"/>
            <Setter Property="BorderBrush" Value="#837A5B"/>
            <EventSetter Event="PreviewMouseUp" Handler="RightListOfGods_PreviewMouseUp"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                            <Grid>
                                <Image Source="{TemplateBinding Property=Image.Source}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#C7C2AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="god_Style" TargetType="ListBox">
            <Setter Property="Height" Value="355"/>
            <Setter Property="Width" Value="246"/>
            <Setter Property="BorderBrush" Value="Blue"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <WrapPanel IsItemsHost="True"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="OverridesDefaultStyle" Value="true"/>
                        <Setter Property="Height" Value="355"/>
                        <Setter Property="Width" Value="246"/>
                        <Setter Property="BorderBrush" Value="#837A5B"/>
                        <Setter Property="Foreground" Value="Transparent"/>
                        <Setter Property="Image.Source" Value="{Binding PreviewPath}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border BorderThickness="1" BorderBrush="{TemplateBinding BorderBrush}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="325"/>
                                                <RowDefinition Height="30"/>
                                            </Grid.RowDefinitions>
                                            <Image Grid.Row="0" Grid.RowSpan="1" Source="{TemplateBinding Property=Image.Source}"/>
                                            <Border Grid.Row="1" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0,1,0,0">
                                                <TextBlock Text="{Binding Path=Name, Converter={StaticResource toSeparatedStringConverter}}" Style="{StaticResource font_Style}"/>
                                            </Border>
                                            <ContentPresenter/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Tag" Value="no"/>
                        <Style.Triggers>

                            <DataTrigger Binding="{Binding ElementName=leftListOfGods, Path=Visibility}" Value="Visible">
                                <Setter Property="Tag" Value="yes"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ElementName=leftListOfItems, Path=Visibility}" Value="Visible">
                                <Setter Property="Tag" Value="yes"/>
                            </DataTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Tag" Value="no"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="BorderBrush" Value="#C7C2AF"/>
                            </MultiTrigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="target_Style" TargetType="ListBox">
            <Setter Property="Height" Value="355"/>
            <Setter Property="Width" Value="246"/>
            <Setter Property="BorderBrush" Value="Blue"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <WrapPanel IsItemsHost="True"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="OverridesDefaultStyle" Value="true"/>
                        <Setter Property="Height" Value="355"/>
                        <Setter Property="Width" Value="246"/>
                        <Setter Property="BorderBrush" Value="#837A5B"/>
                        <Setter Property="Foreground" Value="Transparent"/>
                        <Setter Property="Image.Source" Value="{Binding PreviewPath}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border BorderThickness="1" BorderBrush="{TemplateBinding BorderBrush}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="325"/>
                                                <RowDefinition Height="30"/>
                                            </Grid.RowDefinitions>
                                            <Image Grid.Row="0" Grid.RowSpan="1" Source="{TemplateBinding Property=Image.Source}"/>
                                            <Border Grid.Row="1" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0,1,0,0">
                                                <TextBlock Text="{Binding Name}" Style="{StaticResource font_Style}"/>
                                            </Border>
                                            <ContentPresenter/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
