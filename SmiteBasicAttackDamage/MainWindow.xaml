                <ListBox x:Name="attacker" Style="{StaticResource god_Style}"/>
                <ListBox x:Name="sixItemsOfAttacker" Style="{StaticResource SelectedItemsOfAttacker_Style}"/>
                <ListBox x:Name="leftListOfItems" Style="{StaticResource leftListOfItems_Style}"/>
                <ListBox x:Name="leftListOfGods" Style="{StaticResource leftListOfGods_Style}"/>
            </Grid>
            <Border Style="{StaticResource border_Style}" BorderThickness="1,0,1,0">
                <TextBlock Margin="0,5,0,0" Text="l e v e l" Style="{StaticResource font_Style}"/>
            </Border>
            <Border Style="{StaticResource border_Style}" BorderThickness="1,0,1,0">
                <Slider x:Name="attackerLevelSlider" Style="{StaticResource slider_Style}" ValueChanged="AttackerLevelSlider_ValueChanged" Value="{Binding ElementName=levelOfAttacker, Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
            </Border>
            <Border Style="{StaticResource border_Style}" BorderThickness="1,0,1,1">
                <TextBlock Style="{StaticResource font_Style}" Text="0" Name="levelOfAttacker"/>
            </Border>
            <Border Style="{StaticResource border_Style}" BorderThickness="1,0,1,1" Padding="10, 10, 10, 9" Height="134">
                <ListBox x:Name="characteristicsOfAttacker" Style="{StaticResource characteristicsOfAttacker_style}"/>
            </Border>

        </StackPanel>
        <StackPanel Grid.Column="2">
            <Border Style="{StaticResource border_Style}" BorderThickness="1,1,1,0">
                <TextBlock Text="T a r g e t " Style="{StaticResource font_Style}"/>
            </Border>
            <Grid>
                <ListBox x:Name="target" Style="{StaticResource target_Style}"/>
                <ListBox x:Name="sixItemsOfTarget" Style="{StaticResource selectedItemsOfTarget_Style}"/>
                <ListBox x:Name="rightListOfItems" Style="{StaticResource rightListOfItems_Style}"/>
                <ListBox x:Name="rightListOfGods" Style="{StaticResource rightListOfGods_Style}"/>
            </Grid>
            <Border Style="{StaticResource border_Style}" BorderThickness="1,0,1,0">
                <TextBlock Margin="0,5,0,0" Text="l e v e l" Style="{StaticResource font_Style}"/>
            </Border>
            <Border Style="{StaticResource border_Style}" BorderThickness="1,0,1,0">
                <Slider x:Name="targetLevelSlider" Style="{StaticResource targetSlider_Style}" ValueChanged="TargetLevelSlider_ValueChanged" Value="{Binding ElementName=levelOfTarget, Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
            </Border>
            <Border Style="{StaticResource border_Style}" BorderThickness="1,0,1,1">
                <TextBlock Style="{StaticResource font_Style}" Text="0" Name="levelOfTarget"/>
            </Border>
            <Border Style="{StaticResource border_Style}" BorderThickness="1,0,1,1" Padding="10, 10, 10, 9" Height="134">
                <ListBox x:Name="characteristicsOfTarget" Style="{StaticResource characteristicsOfTarget_style}"/>
            </Border>
        </StackPanel>
        <Grid Grid.Column="1" Margin="12,0,12,0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel>
                <TextBlock x:Name="somethingTextBlock" Height="50" Background="white" Foreground="black" FontSize="20"/>
                <Button x:Name="TestButton" Click="TestButton_Click" Height="50"/>
                <Button Name="TestButton2" Click="TestButton2_Click" Height="50"/>
            </StackPanel>
            <Border Grid.Row="1" Padding="2" BorderBrush="#837A5B" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock VerticalAlignment="Center" Style="{StaticResource font_Style}" Text="SNCD"/>
                    <TextBlock VerticalAlignment="Center" Grid.Column="1" Style="{StaticResource font_Style}" Text="SCD"/>
                    <TextBlock VerticalAlignment="Center" Grid.Column="2" Style="{StaticResource font_Style}" Text="GAD"/>
                    <TextBlock VerticalAlignment="Center" Grid.Column="3" Style="{StaticResource font_Style}" Text="ANCD"/>
                    <TextBlock VerticalAlignment="Center" Grid.Column="4" Style="{StaticResource font_Style}" Text="ACD"/>
                    <TextBlock VerticalAlignment="Center" Grid.Row="1" Style="{StaticResource font_Style}" Text="100"/>
                    <TextBlock VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Style="{StaticResource font_Style}" Text="200"/>
                    <TextBlock VerticalAlignment="Center" Grid.Row="1" Grid.Column="2" Style="{StaticResource font_Style}" Text="300"/>
                    <TextBlock VerticalAlignment="Center" Grid.Row="1" Grid.Column="3" Style="{StaticResource font_Style}" Text="400"/>
                    <TextBlock VerticalAlignment="Center" Grid.Row="1" Grid.Column="4" Style="{StaticResource font_Style}" Text="500"/>
                </Grid>
            </Border>
            <ListBox x:Name="builds" Grid.Row="2" Style="{StaticResource builds_Style}">
                <ListBox.Resources>
                    <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource buildItems_Style}">
                    </Style>
                </ListBox.Resources>
            </ListBox>
        </Grid>
    </Grid>
</Window>
